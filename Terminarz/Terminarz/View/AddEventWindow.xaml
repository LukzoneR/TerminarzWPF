<mah:MetroWindow x:Class="Terminarz.View.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Add Event" Height="550" Width="400"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        FontFamily="Bahnschrift"
        Background="#333333">

    <mah:MetroWindow.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Margin="20,20,20,20" Background="#333333">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="31"/>
            <RowDefinition Height="Auto" MinHeight="40"/>
            <RowDefinition Height="Auto" MinHeight="24"/>
            <RowDefinition Height="Auto" MinHeight="85"/>
            <RowDefinition Height="92.533"/>
        </Grid.RowDefinitions>

        <!-- Name Field -->
        <TextBlock Text="Nazwa:"
                   Grid.Row="0"
                   Foreground="White" 
                   Margin="0,0,0,5"/>
        <TextBox Name="NameTextBox"
                 Grid.Row="1"
                 Margin="0,0,0,10"
                 />

        <!-- Location Field -->
        <TextBlock Text="Lokalizacja:"
                   Grid.Row="2"
                   Foreground="White"
                   Margin="0,0,0,5"/>
        <TextBox Name="LocationTextBox"
                 Grid.Row="3"
                 Margin="0,0,0,10"
                 />

        <!-- Start Date Field -->
        <TextBlock Text="Data rozpoczęcia:" 
                   Grid.Row="4"
                   Foreground="White"
                   Margin="0,0,0,5"/>
        <mah:DateTimePicker Name="StartDatePicker"
                            Grid.Row="5"
                            Style="{DynamicResource MaterialDesignFloatingHintDatePicker}"
                            Margin="0,0,0,10"
                            Background="#1E1E1E"
                            Foreground="White"/>

        <!-- End Date Field -->
        <TextBlock Text="Data zakończenia:" 
                   Grid.Row="6"
                   Foreground="White" 
                   Margin="0,0,0,5"/>
        <mah:DateTimePicker Name="EndDatePicker"
                            Grid.Row="7"
                            Style="{DynamicResource MaterialDesignFloatingHintDatePicker}"
                            Height="27"
                            VerticalAlignment="Center" 
                            Background="#1E1E1E"
                            Foreground="White"/>

        <!-- Color Field -->
        <TextBlock Text="Kolor:"
                   Grid.Row="8"
                   Foreground="White"
                   Margin="0,9,0,2"/>
        <TextBox Name="ColorTextBox"
                 Grid.Row="9" 
                 Margin="0,0,0,11"/>

        <!-- Description Field -->
        <TextBlock Text="Opis:"
                   Grid.Row="9" 
                   Foreground="White" 
                   RenderTransformOrigin="0.5,0.5"
                   Margin="0,39,0,9"
                   Grid.RowSpan="2">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.067"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.332"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBox Name="DescriptionTextBox"
                 Grid.Row="11"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 MinHeight="80" Margin="0,0,0,5"/>

        <!-- Button -->
        <Button Content="Add" Click="AddEvent_Click" Grid.Row="12" Padding="20,5" 
                Foreground="black" 
                Cursor="Hand"
                MinWidth="30" HorizontalAlignment="Center"
                Width="80" Height="30"
                VerticalAlignment="Center"/>
    </Grid>
</mah:MetroWindow>