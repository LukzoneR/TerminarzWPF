<Window x:Class="Terminarz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Terminarz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <Grid Grid.Row="0" Background="LightGray" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="&#x276E;" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30"/>
            <!-- Left Arrow -->
            <TextBlock Grid.Column="1" Text="December 2020" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Grid.Column="2" Content="&#x276F;" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30"/>
            <!-- Right Arrow -->
        </Grid>

        <!-- Header displaying days of the week -->
        <Grid Grid.Row="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <!-- Time column -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>



            <TextBlock Grid.Column="1" Text="Monday" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="top" Width="83"/>
            <TextBlock Grid.Column="1" Text="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,25,0,11" Width="28"/>

            <TextBlock Grid.Column="2" Text="Tuesday" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2" Text="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,25,0,11" Width="28"/>
            
            <TextBlock Grid.Column="3" Text="Wednesday" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="3" Text="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,25,0,11" Width="28"/>
            
            <TextBlock Grid.Column="4" Text="Thursday" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="4" Text="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,25,0,11" Width="28"/>
            
            <TextBlock Grid.Column="5" Text="Friday" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="5" Text="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,25,0,11" Width="28"/>
            
            <TextBlock Grid.Column="6" Text="Saturday" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="6" Text="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,25,0,11" Width="28"/>
            
            <TextBlock Grid.Column="7" Text="Sunday" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="7" Text="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,25,0,11" Width="28"/>
        </Grid>

        <!-- Scrollable scheduler -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <!-- Time column -->
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!-- Define rows for each hour (9 AM to 5 PM) -->
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <!-- Time labels -->
                <TextBlock Grid.Row="0" Text="9 AM" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="1" Text="10 AM" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="2" Text="11 AM" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="3" Text="12 PM" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="4" Text="1 PM" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="5" Text="2 PM" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="6" Text="3 PM" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="7" Text="4 PM" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="8" Text="5 PM" VerticalAlignment="Center" Margin="5"/>

                <!-- Grid lines -->
                <Border Grid.RowSpan="9" Grid.ColumnSpan="8" BorderBrush="Gray" BorderThickness="1"/>

                <!-- Vertical Lines -->
                <Border Grid.RowSpan="9" Grid.Column="1" BorderBrush="Gray" BorderThickness="1,0,0,0"/>
                <Border Grid.RowSpan="9" Grid.Column="2" BorderBrush="Gray" BorderThickness="1,0,0,0"/>
                <Border Grid.RowSpan="9" Grid.Column="3" BorderBrush="Gray" BorderThickness="1,0,0,0"/>
                <Border Grid.RowSpan="9" Grid.Column="4" BorderBrush="Gray" BorderThickness="1,0,0,0"/>
                <Border Grid.RowSpan="9" Grid.Column="5" BorderBrush="Gray" BorderThickness="1,0,0,0"/>
                <Border Grid.RowSpan="9" Grid.Column="6" BorderBrush="Gray" BorderThickness="1,0,0,0"/>
                <Border Grid.RowSpan="9" Grid.Column="7" BorderBrush="Gray" BorderThickness="1,0,0,0"/>

                <!-- Horizontal Lines -->
                <Border Grid.ColumnSpan="8" Grid.Row="1" BorderBrush="Gray" BorderThickness="0,1,0,0"/>
                <Border Grid.ColumnSpan="8" Grid.Row="2" BorderBrush="Gray" BorderThickness="0,1,0,0"/>
                <Border Grid.ColumnSpan="8" Grid.Row="3" BorderBrush="Gray" BorderThickness="0,1,0,0"/>
                <Border Grid.ColumnSpan="8" Grid.Row="4" BorderBrush="Gray" BorderThickness="0,1,0,0"/>
                <Border Grid.ColumnSpan="8" Grid.Row="5" BorderBrush="Gray" BorderThickness="0,1,0,0"/>
                <Border Grid.ColumnSpan="8" Grid.Row="6" BorderBrush="Gray" BorderThickness="0,1,0,0"/>
                <Border Grid.ColumnSpan="8" Grid.Row="7" BorderBrush="Gray" BorderThickness="0,1,0,0"/>
                <Border Grid.ColumnSpan="8" Grid.Row="8" BorderBrush="Gray" BorderThickness="0,1,0,0"/>

                <!-- Sample Event -->
                <Border Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Background="Blue" CornerRadius="5"
                        Margin="5">
                    <TextBlock Text="Client Meeting" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
